#include <iostream>

int main()
{
    int a = 10;
    int b = 20;

    printf("스왑 전 : %d %d\n", a, b);

    int temp = a;
    a = b;
    b = temp;

    printf("스왑 후 : %d %d\n", a, b);

    // > <
    // == !=
    // && ||

    // 반복문
    int condition = 5;
    while (condition > 0)
    {
        printf("%d\n", condition);
        condition--;
    }

    for (int i = 2; i < 10; i++)
    {
        printf("%d단\n", i);
        for (int j = 1; j < 9; j++)
        {
            printf("%d * %d = %d\n", i, j, i * j);
        }
    }

    // 조건문
    int num1 = 1;
    int num2 = 2;
    bool equal = num1 == num2;
    if (num1 > num2)
    {
        printf("num1 > num2 \n");
    }
    else if(num1 < num2)
    {
        printf("num1 < num2 \n");
    }
    else
    {
        printf("num1 == num2 \n");
    }

    int num3 = 5;
    bool isEvenNumber = num3 % 2 == 0;
    if (isEvenNumber)
    {
        printf("짝수\n");
    }
    else
    {
        printf("홀수\n");
    }

    // 삼항연산자
    // (조건) ? A : B
    int num4 = -100;
    int absolute = num4 > 0 ? num4 : -num4;
    printf("%d\n", absolute);

    for (int i = 0; i < 10; i++)
    {
        for (int j = 0; j < 10; j++)
        {
            if (j > 5)
            {
                // 자신을 둘러싸고 있는 가장 가까운 반복문 탈출
                break;
            }
            printf("%d\n", j);
        }

        if (i % 2 == 1)
        {
            //반복문 한 번 스킵
            continue;
        }

        printf("%d\n", i);
    }

    int num5 = 1;
    switch (num5)
    {
        case 1:
        case 3:
            printf("홀수\n");
            break;
        case 2:
        case 4:
            printf("짝수\n");
            break;
        default:
            printf("기타\n");
            break;
    }
}

